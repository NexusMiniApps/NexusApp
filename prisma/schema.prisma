generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Idea {
  id          String     @id @default(cuid())
  title       String
  description String?
  likes       Int        @default(0)
  dislikes    Int        @default(0)
  userVotes   UserVote[]

  eventId     String
  event       Event  @relation(fields: [eventId], references: [id])

  userId      String
  author      User   @relation(fields: [userId], references: [id])
}

model User {
  id         String  @id @default(cuid())
  telegramId BigInt  @unique
  firstName  String
  lastName   String?
  username   String?

  events    Event[]
  ideas     Idea[]
  userVotes UserVote[]
}

model UserVote {
  id        String   @id @default(cuid())
  type      VoteType
  userId    String
  ideaId    String

  user      User @relation(fields: [userId], references: [id])
  idea      Idea @relation(fields: [ideaId], references: [id])
}

enum VoteType {
  LIKE
  DISLIKE
}

model Event {
  id          String  @id @default(cuid())
  name        String
  description String?
  
  userId      String
  author      User   @relation(fields: [userId], references: [id])
  chatId      String @default("")
  ideas       Idea[]
}
